{
"Alerts": [
  {
  "Name": "Otto Load Avg",
        "Metric": "summarize(ccnmtl.server.selma.cpu.load_average.1_minute,'7min','avg')",
        "Threshold": 1.0,
        "Direction": "above"
  },

  {
  "Name": "Capsim Smoketests Failed",
	"Metric": "ccnmtl.app.smoketest.capsim.failed",
	"Threshold": 0.5,
	"Direction": "above",
  "EmailTo": "anders2@columbia.edu"
  },
  {
  "Name": "Capsim Smoketests Passed",
	"Metric": "ccnmtl.app.smoketest.capsim.passed",
	"Threshold": 0.5,
	"Direction": "below" 
	},
  {
  "Name": "MVSim Smoketests Failed",
	"Metric": "ccnmtl.app.smoketest.mvsim.failed",
	"Threshold": 0.5,
	"Direction": "above" 
	}
]
}
