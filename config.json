{
"GraphiteBase": "http://nanny.cul.columbia.edu/render/",
"EmailFrom": "hound@ccnmtl.columbia.edu",
"EmailTo": "anders@columbia.edu",
"CheckInterval": 5,
"GlobalThrottle": 10,
"HttpPort": "9999",
"TemplateFile": "index.html",
"Alerts": [
  {
  "Name": "Otto Load Avg",
        "Metric": "ccnmtl.server.otto.cpu.load_average.1_minute",
        "Threshold": 3.0,
        "Direction": "above"
  },

  {
  "Name": "Capsim Smoketests Failed",
	"Metric": "ccnmtl.app.smoketest.capsim.failed",
	"Threshold": 0.5,
	"Direction": "above"
  },
  {
  "Name": "Capsim Smoketests Passed",
	"Metric": "ccnmtl.app.smoketest.capsim.passed",
	"Threshold": 0.5,
	"Direction": "below" 
	},
  {
  "Name": "MVSim Smoketests Failed",
	"Metric": "ccnmtl.app.smoketest.mvsim.failed",
	"Threshold": 0.5,
	"Direction": "above" 
	}
]
}
